"Refract"
{
	<dx90
	{
		 	"$fallbackmaterial" "effects/invuln_overlay_dm_dx80"
	}

	"%keywords" "tf"
	"$forcerefract" "1"
	"$refractamount" ".02"
	"$model" "1"
	"$refracttint" "{255 255 255}"
	"$colortint_base"		"{ 255 255 255 }"
	"$colortint_tmp"		"[0 0 0]"
	"$color2_multiply"	"[2 2 2]"
	"$normalmap" "effects/shield_overlay_normal"
	"$normalmap2" "effects/shield_overlay_normal2"

	"$translate" "0"
	"$angle" "0"
	"$angle2" "0"
	"$center" "[.5 .5]"
	"$scale" "[.475 .475]"

	"$bumpframe" "0"
	"$bluramount" "1"
	"$refracttinttexture" "effects/invulnoverlay/invuln_overlay_shield"

	"Proxies"
	{
		"TextureTransform"
		{
			"translateVar" "$translate"
			"rotateVar" "$angle"
			"centerVar" "$center"
			"scaleVar" "$scale"
			"resultVar" "$bumptransform"
		}
		"TextureTransform"
		{
			"translateVar" "$translate"
			"rotateVar" "$angle2"
			"centerVar" "$center"
			"scaleVar" "$scale"
			"resultVar" "$bumptransform2"
		}
		"sine"
		{
			"sinemax" ".1"
			"sinemin" "-.1"
			"sineperiod" ".81"
			"resultvar" "$refractamount"
		}
		"LocalPlayerColor"
		{
			"resultVar"		"$colortint_tmp"
		}
		"SelectFirstIfNonZero"
		{
			"srcVar1"		"$colortint_tmp"
			"srcVar2"		"$colortint_base"
			"resultVar"		"$refracttint"
		}
		"Multiply"
		{
			"srcVar1"		"$refracttint"
			"srcVar2"		"$color2_multiply"
			"resultVar"		"$refracttint"
		}
		"LinearRamp"
		{
			"rate" -90
			"initialValue" 0.0
			"resultVar" "$angle"
		}
		"LinearRamp"
		{
			"rate" 90
			"initialValue" 0.0
			"resultVar" "$angle2"
		}



	}
}



