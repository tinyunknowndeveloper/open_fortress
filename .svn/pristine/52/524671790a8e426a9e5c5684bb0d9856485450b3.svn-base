"UnlitGeneric"
{
	"<dx90"
	{
		$outlinecolor "[0.9 0.9 0.8]"
	}
	
	"$translucent" 1
	"$baseTexture" "hud\gradient_purple"
	"$detail" "hud\dm_panel_bg"
	$detailscale 1
	$detailblendmode 8
	$distancealphafromdetail 1

	// give it a slight outer soft edge
	$softedges 1
	$edgesoftnessstart 0.6
    $edgesoftnessend 0.3
	$scaleedgesoftnessbasedonscreenres 1

	// give it a white outline
	$outline 1
	$outlinecolor "[0.9 0.9 0.5]"
	$outlinestart0 0.6
	$outlinestart1 0.65
	$outlineend0 0.45
	$outlineend1 0.47
	
	$scaleoutlinesoftnessbasedonscreenres 1
	// and a drop shadow
	$glow 0
	$glowcolor "[0 0 0]"
	$glowalpha 0.5
	$glowstart 0
	$glowend 1
	$glowx -0.001
	$glowy -0.001

//	"$vertexcolor" 1
	$distancealpha 1
	"$no_fullbright" 1
	"$ignorez" 1
	
	"$colortint_base"		"[1 0 1]"
	"$colortint_tmp"		"[0 0 0]"
	"$colortint_mul"		"[.7 .7 .7]"	
	
	"Proxies"
	{
		"ItemTintColor"
		{
			"resultVar"		"$colortint_tmp"
		}	
		"SelectFirstIfNonZero"
		{
			"srcVar1"		"$colortint_tmp"
			"srcVar2"		"$colortint_base"
			"resultVar"		"$outlinecolor"
		}
		"Multiply"
		{
			"srcVar1"		"$outlinecolor"
			"srcVar2"		"$colortint_mul"
			"resultVar"		"$outlinecolor"
		}
	}	
}

