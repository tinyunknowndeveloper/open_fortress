"UnlitGeneric"
{
	"$translucent" 1
	"$baseTexture" "hud\gradient_dm_dark"
	"$detail" "hud\class_bg_mask"
	$detailscale 1
	$detailblendmode 8
	$distancealphafromdetail 1

	// give it a slight outer soft edge
	$softedges 1
	$edgesoftnessstart 0.5
    $edgesoftnessend 0.4
	$scaleedgesoftnessbasedonscreenres 1

	// give it a white outline
	$outline 1
//	$outlinecolor "[0.7 0.7 0.5]"
	$outlinealpha "1"
//	$outlinecolor "[1 0 1]"
	$outlinestart0 1.5
	$outlinestart1 1
	$outlineend0 0.68
	$outlineend1 0.55
	$scaleoutlinesoftnessbasedonscreenres 1
	// and a drop shadow
	$glow 1
	$glowcolor "[0 0 0]"
	$glowalpha 0.45
	$glowstart 0.03
	$glowend 0.5
	$glowx -0.001
	$glowy -0.001

	"$colortint_base"		"[0 0 0]"
	"$colortint_tmp"		"[0 0 0]"
	"$colortint_mul"		"[.7 .7 .7]"

//	"$vertexcolor" 1
	$distancealpha 1
	"$no_fullbright" 1
	"$ignorez" 1
	"%keywords" "tf"

	"Proxies"
	{
		"SelectFirstIfNonZero"
		{
			"srcVar1"		"$colortint_tmp"
			"srcVar2"		"$colortint_base"
			"resultVar"		"$outlinecolor"
		}		
		"ItemTintColor"
		{
			"resultVar"		"$colortint_tmp"
		}		
		"Multiply"
		{
			"srcVar1"		"$outlinecolor"
			"srcVar2"		"$colortint_mul"
			"resultVar"		"$outlinecolor"
		}
	}
}




