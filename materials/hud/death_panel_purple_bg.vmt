"UnlitGeneric"
{
	"<dx90"
	{
		$outlinecolor "[0.9 0.9 0.8]"
	}
	
	"$translucent" 1
	"$baseTexture" "hud\gradient_dm_dark"
	"$detail" "hud\death_panel_mask"
	$detailscale 1
	$detailblendmode 8
	$distancealphafromdetail 1

	// give it a slight outer soft edge
	$softedges 1
	$edgesoftnessstart 0.44
    $edgesoftnessend 0.43
	$scaleedgesoftnessbasedonscreenres 0

	// give it a white outline
	$outline 1
	$outlinealpha ".8"
	$outlinestart0 0.1
	$outlinestart1 0.1
	$outlineend0 0.56
	$outlineend1 0.55
	$scaleoutlinesoftnessbasedonscreenres 0


	"$colortint_base"		"[0 0 0]"
	"$colortint_tmp"		"[0 0 0]"
	"$colortint_mul"		"[.7 .7 .7]"

//	"$vertexcolor" 1
	$distancealpha 1
	"$no_fullbright" 1
	"$ignorez" 1
	"%keywords" "tf"
	
	"Proxies"
	{
		"ItemTintColor"
		{
			"resultVar"		"$colortint_tmp"
		}	
		"SelectFirstIfNonZero"
		{
			"srcVar1"		"$colortint_tmp"
			"srcVar2"		"$colortint_base"
			"resultVar"		"$outlinecolor"
		}
		"Multiply"
		{
			"srcVar1"		"$outlinecolor"
			"srcVar2"		"$colortint_mul"
			"resultVar"		"$outlinecolor"
		}
	}
}

